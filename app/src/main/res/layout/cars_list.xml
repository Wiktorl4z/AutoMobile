<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/carImageView"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/auto1" />

    <TextView
        android:id="@+id/text_view_price"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:background="@color/cardview_light_background"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:text="499 999 PLN"
        android:textColor="@color/priceColor"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/carImageView"
        app:layout_constraintEnd_toEndOf="@+id/carImageView" />

    <TextView
        android:id="@+id/carNameTextView"
        style=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Ford Mustang"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carImageView" />

    <TextView
        android:id="@+id/text_view_engine_mileage_from_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="155 534"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/text_view_engine_mileage"
        app:layout_constraintTop_toBottomOf="@+id/text_view_engine_mileage" />

    <TextView
        android:id="@+id/text_view_production"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Rok produkcji:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carNameTextView" />

    <TextView
        android:id="@+id/text_view_engine_mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Przebieg:"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/text_view_engine_type"
        app:layout_constraintStart_toEndOf="@+id/text_view_production"
        app:layout_constraintTop_toBottomOf="@+id/carNameTextView" />

    <TextView
        android:id="@+id/text_view_engine_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Silnik:"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carNameTextView" />

    <TextView
        android:id="@+id/text_view_engine_type_from_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Benzyna"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/text_view_engine_type"
        app:layout_constraintTop_toBottomOf="@+id/text_view_engine_type" />

    <TextView
        android:id="@+id/text_view_production_date_from_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="1974"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/text_view_production"
        app:layout_constraintTop_toBottomOf="@+id/text_view_production" />
</android.support.constraint.ConstraintLayout>